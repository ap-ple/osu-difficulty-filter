{
  "manifest_version": 3,
 
  "name": "osu! difficulty filter",
  "version": "0.1.0",
  "description": "filters osu! beatmaps by star difficulty",

  "permissions": ["activeTab",  "scripting"],
  "host_permissions": ["https://osu.ppy.sh/users/*", "https://osu.ppy.sh/beatmapsets"],

  "background": {
    "service_worker": "serviceWorker.js"
  },

  "content_scripts": [{
    "js": ["contentScript.js"],
    "matches": ["https://osu.ppy.sh/users/*", "https://osu.ppy.sh/beatmapsets"]
  }],

  "action": {
    "default_icon": {
      "16": "assets/ext-icon.png",
      "24": "assets/ext-icon.png",
      "32": "assets/ext-icon.png"
    },
    "default_title": "odf!",
    "default_popup": "popup.html"
  }
}